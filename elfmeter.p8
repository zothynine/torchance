--kick

function update_kick()
	xdown = btn(5)
		
	check_fresh()
	
	if xdown and not fresh then
		kicking.started = true
	end
	
	if not xdown
				and kicking.started then
		kicking.ended = true
	end
end

function draw_kick()
	cls()
	print(tostr(kicking.started)..","..tostr(kicking.ended))
end

